<MDCard>:
    padding:20
    elevation: 10
    radius: 30


MDScreen:
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Status'
            icon: 'monitor-dashboard'
            
            GridLayout:
                cols: 2
                spacing: 15
                padding: 15
                MDCard:
                    MDIcon:
                        icon: 'thermometer-low'
                        font_size: 60
                    MDLabel:
                        id: temp
                        text: '30 C'
                MDCard:
                    MDIcon:
                        icon: 'molecule-co'
                        font_size: 60
                    MDLabel:
                        id: co
                        text: '100 PPM'
                MDCard:
                    MDIcon:
                        icon: 'gas-cylinder'
                        font_size: 60
                    MDLabel:
                        id: lpg
                        text: '200 PPM'

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Profile'
            icon: 'card-account-details'
            BoxLayout:
                padding: 40
                MDCard:
                    MDLabel:
                        id: userinfo
                        text: ''
                    MDLabel:
                        id: userlocation
                        text: 'Las Pinas City'